<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group p-2">
                            <input type="text" class="form-control" name="title" placeholder="Title" value="{{link.title}}" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="url" name="url" class="form-control" placeholder="URL" value="{{link.url}}">
                        </div>
                        <div class="form-group p-2">
                            <textarea name="description" id="description" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                        </div>
                        <div class="form-group p-2">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>